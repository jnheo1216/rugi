root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# 2 space indentation
[*.{html,css,js,vue,json,yml,yaml}]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# 4 space indentation
[*.{py, java}]
charset = utf-8
indent_style = space
indent_size = 4
